#:kivy 2.2.1
#:import utils kivy.utils
#:import Factory kivy.factory.Factory

############ CONSTANTES #########
#:set radius_default 25
#:set color_fondo_pantalla '#707070'
#:set color_btn_press '#aeaeae'
#:set color_btn_normal '#90a4a4'
#:set color_btn_special '#5886ac'
# colores botones
#:set color_stop_press  '#d60000'
#:set color_stop '#880000'
#:set color_start_press '#006600'
#:set color_start '#009900'
#:set color_pause_press '#cc6600'
#:set color_pause '#ff8000'
#:set color_modos_press '#000066'
#:set color_modos "#0000cc"
#:set color_bocina_press '#000066'
#:set color_bocina "#0000cc"

#:set color_popup '#887700'
#:set label_txt_viaje '\n\n\nVUELTAS\n'
#:set label_txt_parada 'ESPERA\n'
#:set title_popup ''
#:set label_start 'MARCHA'
#:set label_pause 'PAUSA'
#:set label_stop 'PARO'
#:set START "START"
#:set STOP "STOP"
#:set PAUSE "PAUSE"


# Estilo para los layouts
<BoxLayout>:
    spacing: 20
<Label>:
    halign: 'center'
    font_size: 60
    valign: 'middle'
    

<Button>:
    font_size: 40
    color: utils.get_color_from_hex('#000000')
    disabled_color: utils.get_color_from_hex('#111111')
    background_color: (0, 0, 0, 0)
    halign: 'center'
    valign: 'middle'

<Popup_banner>:
    auto_dismiss: False
    size_hint: 0.6, 0.2
    title: ''
    separator_height: 0
    background_color: utils.get_color_from_hex(color_popup)
    #vista pop up
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        #color fondo
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex(color_popup)
            Rectangle:
                pos: self.pos
                size: self.size
        #cuerpo
        Label:
            id: label_popup
            color: utils.get_color_from_hex('#000000')
            text: title_popup
            halign: 'center'
            valign: 'middle'
#################### VISTA PRINCIPAL ##############
<viewMain>:
    # color de fondo
    canvas.before:
        Color:
            rgba: (utils.get_color_from_hex(color_fondo_pantalla))
        Rectangle:
            size: root.width, root.height
    # vista principal
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        # Primera fila
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.33
            # Boton Manual
            BoxLayout:
                orientation: 'vertical'
                #size_hint_y: 1
                BoxLayout:
                    padding : [10,10,10,10]
                    ToggleButton:
                        id: manual_button
                        text: 'MANUAL'
                        group: 'mode'
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex(color_modos_press) if self.state == 'down' else utils.get_color_from_hex(color_modos)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [radius_default]

            #texto
            BoxLayout:
                orientation: 'vertical'
                #size_hint_y: 1
                Label:
                    id: mi_txt
                    color: (0,0,0,1)
                    text: label_txt_viaje + str(root.laps)

            # Boton Auto
            BoxLayout:
                orientation: 'vertical'
                #size_hint_y: 1
                BoxLayout:
                    padding : [10,10,10,10]
                    ToggleButton:
                        id: auto_button
                        text: 'AUTO'
                        group: 'mode'
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex(color_modos_press) if self.state == 'down' else utils.get_color_from_hex(color_modos)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [radius_default]

        # Segunda fila
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.33
            BoxLayout:
            # Columna vistas
            BoxLayout:
                orientation: 'vertical'
                #size_hint_y: 1
                Label:
                    id: mi_label
                    height: self.parent.height * 0.1
                # Boton de cambio + tiempo de viaje
                BoxLayout:
                    orientation: 'horizontal'
                    #size_hint_y: None
                    height: self.parent.height * 0.3
                    padding: [self.width * 0.4 - self.height * 0.4, 0, self.width * 0.4 - self.height * 0.4, 0]
                    Button:
                        id: mayor_button
                        text: "+"
                        width: self.height
                        height: self.parent.height
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex(color_btn_normal) if self.state == 'down' else utils.get_color_from_hex(color_btn_press)                               
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [20]

                # Boton de cambio - tiempo de viaje
                BoxLayout:
                    orientation: 'horizontal'
                    #size_hint_y: None
                    height: self.parent.height * 0.3
                    padding: [self.width * 0.4 - self.height * 0.4, 0, self.width * 0.4 - self.height * 0.4, 0]
                    Button:
                        id: minus_button
                        text: "-"
                        width: self.height
                        height: self.parent.height
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex(color_btn_normal) if self.state == 'down' else utils.get_color_from_hex(color_btn_press)                               
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [20]
            # Columna botones especiales
            BoxLayout:
                orientation: 'vertical'
                #size_hint_y: 1
                # Boton bocina
                padding : [10,10,10,10]
                Button:
                    id: bocina_button
                    text: "BOCINA"
                    height: self.parent.height * 0.6
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(color_bocina_press) if self.state == 'down' else utils.get_color_from_hex(color_bocina)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [30]
        # Tercera fila
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.33
            # Boton Start
            BoxLayout:
                orientation: 'vertical'
                #size_hint_y: 1
                padding : [10,10,10,10]
                ToggleButton:
                    id: start_button
                    text: label_start
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(color_start_press) if self.disabled else utils.get_color_from_hex(color_start)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [30]
                

            # Boton pause
            BoxLayout:
                orientation: 'vertical'
                #size_hint_y: 1
                padding : [10,10,10,10]
                ToggleButton:
                    id: pause_button
                    text: label_pause
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(color_pause_press) if self.disabled else utils.get_color_from_hex(color_pause)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [30]
                

            # Boton stop
            BoxLayout:
                orientation: 'vertical'
                #size_hint_y: 1
                padding : [10,10,10,10]
                Button:
                    id: stop_button
                    text: label_stop
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(color_stop_press) if self.state == 'normal' else utils.get_color_from_hex(color_stop)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [30]
                
