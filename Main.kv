#:kivy 2.2.1
#:import utils kivy.utils

<viewMain>:
    BoxLayout:
        orientation: 'vertical'

        # Primera fila de botones de modo
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2

            ToggleButton:
                id: manual_button
                text: "MANUAL"
                group: "mode"
                on_touch_up: root.mode_press(self, args[1])
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#fffa59') if self.state == 'down' else utils.get_color_from_hex('#aeaeae')
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]

            ToggleButton:
                id: semi_button
                text: "SEMI"
                group: "mode"
                on_touch_up: root.mode_press(self, args[1])
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#fffa59') if self.state == 'down' else utils.get_color_from_hex('#aeaeae')
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]

            ToggleButton:
                id: auto_button
                text: "AUTO"
                group: "mode"
                on_touch_up: root.mode_press(self, args[1])
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#fffa59') if self.state == 'down' else utils.get_color_from_hex('#aeaeae')
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
