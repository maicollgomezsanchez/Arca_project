#:kivy 2.2.1
#:import utils kivy.utils
#:import Factory kivy.factory.Factory

############ CONSTANTES #########
#:set color_fondo_pantalla '#23272a'
#:set color_btn_press '#2c2f33'
#:set color_btn_normal '#99aab5'
#:set color_stop '#ff5555'
#:set color_start '#43b581'
#:set color_pause '#faa61a'
#:set color_modos '#99aab5'
#:set color_btn_special '#5865f2'
#:set color_bocina '#5865f2'
#:set color_popup '#23272a'

#:set color_letras_2 '#eeeeee'
#:set radius_default 25
#:set title_popup ''

#:set label_start 'MARCHA'
#:set label_pause 'PAUSA'
#:set label_stop 'PARO'
#:set START "START"
#:set STOP "STOP"
#:set PAUSE "PAUSE"

# Estilo para los layouts
<BoxLayout>:
    spacing: 20
<Label>:
    halign: 'center'
    font_size: 40
    valign: 'middle'
    color: utils.get_color_from_hex(color_letras_2)

<Button>:
    font_size: 28
    color: utils.get_color_from_hex(color_letras_2)
    disabled_color: utils.get_color_from_hex(color_letras_2)
    background_color: (0, 0, 0, 0)
    halign: 'center'
    valign: 'middle'

<Popup_banner>:
    auto_dismiss: False
    size_hint: 0.6, 0.2
    title: ''
    separator_height: 0
    background_color: utils.get_color_from_hex(color_popup)
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex(color_popup)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: label_popup
            color: utils.get_color_from_hex(color_letras_2)
            text: title_popup
            halign: 'center'
            valign: 'middle'

#################### VISTA PRINCIPAL REORGANIZADA ##############
<viewMain>:
    canvas.before:
        Color:
            rgba: (utils.get_color_from_hex(color_fondo_pantalla))
        Rectangle:
            size: root.width, root.height

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        # Fila superior: Botones de control principal
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.25
            ToggleButton:
                id: start_button
                text: label_start
                group: 'state'
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex(color_btn_press) if self.disabled else utils.get_color_from_hex(color_start)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [30]
            ToggleButton:
                id: pause_button
                text: label_pause
                group: 'state'
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex(color_btn_press) if self.disabled else utils.get_color_from_hex(color_pause)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [30]
            Button:
                id: stop_button
                text: label_stop
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex(color_stop) if self.state == 'normal' else utils.get_color_from_hex(color_btn_press)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [30]

        # Fila central: Bocina y control de vueltas
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.5

            # Bocina a la izquierda
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.3
                BoxLayout:
                    size_hint_y: 0.2
                Button:
                    id: bocina_button
                    text: "BOCINA"
                    height: self.parent.height * 0.6
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(color_bocina) if self.state == 'down' else utils.get_color_from_hex(color_btn_press)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [30]
                BoxLayout:
                    size_hint_y: 0.2

            # Contador y botones +/-
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.7
                Label:
                    text: str(root.label_txt_viaje) + str(root.laps)
                    height: self.parent.height * 0.6
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: self.parent.height * 0.2
                    padding: [self.width * 0.5 - self.height * 0.5, 0, self.width * 0.5 - self.height * 0.5, 0]
                    Button:
                        id: mayor_button
                        text: "+"
                        width: self.height
                        height: self.parent.height
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex(color_btn_normal) if self.state == 'down' else utils.get_color_from_hex(color_btn_press)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [radius_default]
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: self.parent.height * 0.2
                    padding: [self.width * 0.5 - self.height * 0.5, 0, self.width * 0.5 - self.height * 0.5, 0]
                    Button:
                        id: minus_button
                        text: "-"
                        width: self.height
                        height: self.parent.height
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex(color_btn_normal) if self.state == 'down' else utils.get_color_from_hex(color_btn_press)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [radius_default]

        # Fila inferior: Modos de operaci√≥n
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.25
            BoxLayout:
                ToggleButton:
                    id: manual_button
                    text: 'MANUAL'
                    group: 'mode'
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(color_modos) if self.state == 'down' else utils.get_color_from_hex(color_btn_press)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [radius_default]
            BoxLayout:
            BoxLayout:
                ToggleButton:
                    id: auto_button
                    text: 'AUTO'
                    group: 'mode'
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(color_modos) if self.state == 'down' else utils.get_color_from_hex(color_btn_press)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [radius_default]
